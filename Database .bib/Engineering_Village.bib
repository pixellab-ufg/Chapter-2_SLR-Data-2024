note = {Atlantic basin;Breakings;Climate trends;Coastal development;Coastal ecosystems;Machine-learning;Nature-based solution;North Atlantic;Remote-sensing;Tropical cyclone;},
URL = {http://dx.doi.org/10.2139/ssrn.4381378},
} 


