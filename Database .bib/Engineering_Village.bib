} 


@article{20201208306592 ,
language = {English},
copyright = {Compilation and indexing terms, Copyright 2024 Elsevier Inc.},
copyright = {Compendex},
title = {Vegetation, rainfall, and pulsing hydrology in the Pantanal, the world's largest tropical wetland},
journal = {Environmental Research Letters},
author = {Ivory, Sarah J. and McGlue, Michael M. and Spera, Stephanie and Silva, Aguinaldo and Bergier, Ivan},
volume = {14},
